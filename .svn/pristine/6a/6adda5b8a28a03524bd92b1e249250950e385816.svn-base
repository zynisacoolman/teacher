<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="251.5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="210"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="400" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="480"
            android:background="@drawable/bg_round_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="60"
                android:orientation="vertical">

                <cn.jucheng.www.yizhudan.customcontrols.FitHeightTextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="12dp"
                    android:text="提示"
                    android:textColor="@color/ywtextmessage"
                    android:textSize="16sp" />
            </LinearLayout>

            <cn.jucheng.www.yizhudan.customcontrols.FitHeightTextView
                android:id="@+id/now_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="30"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textColor="@color/heise"
                android:textSize="14sp" />

            <cn.jucheng.www.yizhudan.customcontrols.FitHeightTextView
                android:id="@+id/your_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="30"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textColor="@color/heise"
                android:textSize="14sp" />

            <cn.jucheng.www.yizhudan.customcontrols.FitHeightTextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="30"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textColor="@color/heise"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/heise" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="38"
                android:orientation="horizontal">

                <cn.jucheng.www.yizhudan.customcontrols.FitHeightTextView
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="退出"
                    android:textColor="@color/heise"
                    android:textSize="12sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/heise" />

                <cn.jucheng.www.yizhudan.customcontrols.FitHeightTextView
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/ywtextmessage"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="400" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="251.5" />

</LinearLayout>