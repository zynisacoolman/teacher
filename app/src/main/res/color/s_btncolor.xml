<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 获得焦点时 -->
    <item android:state_focused="true" android:state_pressed="false" android:color="#c1d3e7"/>
    <!-- 获得焦点并按下 -->
    <item android:state_focused="true" android:state_pressed="true" android:color="#c1d3e7"/>
    <!-- 失去焦点时 -->
    <item android:state_focused="false" android:state_pressed="true" android:color="#c1d3e7"/>
    <item android:state_enabled="false" android:color="#4c5e73"/>
    <item android:state_selected="true" android:color="#c1d3e7"/>

    <!-- 默认时 -->
    <item android:color="#c1d3e7"/>

</selector>