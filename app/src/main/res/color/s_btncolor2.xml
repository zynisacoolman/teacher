<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 获得焦点时 -->
    <item android:state_focused="true" android:state_pressed="false" android:color="#b4d0e6"/>
    <!-- 获得焦点并按下 -->
    <item android:state_focused="true" android:state_pressed="true" android:color="#b4d0e6"/>
    <!-- 失去焦点时 -->
    <item android:state_focused="false" android:state_pressed="true" android:color="#b4d0e6"/>
    <item android:state_enabled="false" android:color="#273c52"/>
    <item android:state_selected="true" android:color="#b4d0e6"/>

    <!-- 默认时 -->
    <item android:color="#c1d3e7"/>

</selector>