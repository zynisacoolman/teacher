<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:myViewXmlns="http://schemas.android.com/apk/res/cn.jucheng.www.hulisiwei"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="86" >
    </TextView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="580" >

        <TextView
            android:id="@+id/touming"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="220" >
        </TextView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="840"
            android:background="@drawable/sz_bg"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="10" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:orientation="horizontal" >

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="52"
                    android:background="@android:color/transparent"
                    android:onClick="onDebug" />

                <cn.jucheng.www.hulisiwei.customcontrols.FitHeightTextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="138"
                    android:gravity="center_vertical"
                    android:text="设置"
                    android:textColor="#56BBe0"
                    android:textSize="@dimen/text_size18" />

                <CheckBox
                    android:id="@+id/chkLanYa"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="30"
                    android:background="@drawable/s_chk"
                    android:button="@null"
                    android:visibility="invisible" />

                <cn.jucheng.www.hulisiwei.customcontrols.FitHeightTextView
                    android:id="@+id/chk_tv1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="98"
                    android:text="@string/_chkLanYa"
                    android:textSize="@dimen/text_size18"
                    android:visibility="invisible" />

                <CheckBox
                    android:id="@+id/chkWiFi"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="30"
                    android:background="@drawable/s_chk"
                    android:button="@null"
                    android:visibility="invisible" />

                <cn.jucheng.www.hulisiwei.customcontrols.FitHeightTextView
                    android:id="@+id/chk_tv2"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="98"
                    android:text="@string/_chkWiFi"
                    android:textSize="@dimen/text_size18"
                    android:visibility="invisible" />

                <CheckBox
                    android:id="@+id/chkUSB"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="30"
                    android:background="@drawable/s_chk"
                    android:button="@null"
                    android:visibility="invisible" />

                <cn.jucheng.www.hulisiwei.customcontrols.FitHeightTextView
                    android:id="@+id/chk_tv3"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="98"
                    android:text="@string/_chkUSB"
                    android:textSize="@dimen/text_size18"
                    android:visibility="invisible" />

                <Switch
                    android:id="@+id/btnDebug"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="220"
                    android:textOff="不调试"
                    android:textOn="调试"
                    android:textSize="@dimen/text_size16"
                    android:thumb="@drawable/thumb"
                    android:track="@drawable/track"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="46" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="54" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="323" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="140" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="560"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="100"
                        android:background="@drawable/sz_ljzt_bg"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="120" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="320"
                            android:orientation="vertical" >

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="19" />

                            <cn.jucheng.www.hulisiwei.customcontrols.FitHeightTextView
                                android:id="@+id/textsta"
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="24"
                                android:background="#00000000"
                                android:cursorVisible="false"
                                android:gravity="center_vertical"
                                android:text="@string/txtLanYaZhuangTaiText"
                                android:textColor="#56BBE0"
                                android:textSize="@dimen/text_size26" />

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="9" />

                            <cn.jucheng.www.hulisiwei.customcontrols.FitHeightTextView
                                android:id="@+id/tvSavedDeviceAddress"
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="24"
                                android:gravity="center_vertical"
                                android:text="@string/tvSavedDeviceAddressText1"
                                android:textColor="#56BBE0"
                                android:textSize="@dimen/text_size26" />

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="24" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="35" />

                    <cn.jucheng.www.hulisiwei.customcontrols.FitHeightButton
                        android:id="@+id/btnSelectDevice"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="50"
                        android:background="@drawable/s_btn1"
                        android:gravity="center_vertical|center_horizontal"
                        android:onClick="onSelect"
                        android:text="@string/btnSelectDeviceText"
                        android:textColor="@color/btnSheZhi"
                        android:textSize="@dimen/text_size20"
                        myViewXmlns:attr2="1" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="19" />

                    <cn.jucheng.www.hulisiwei.customcontrols.FitHeightButton
                        android:id="@+id/btnConnectDevice"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="50"
                        android:background="@drawable/s_btn1"
                        android:enabled="false"
                        android:gravity="center_vertical|center_horizontal"
                        android:onClick="checkDeviceConnection"
                        android:text="@string/btnConnectDeviceText"
                        android:textColor="@color/s_btncolor2"
                        android:textSize="@dimen/text_size20"
                        myViewXmlns:attr2="1" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="19" />

                    <cn.jucheng.www.hulisiwei.customcontrols.FitHeightButton
                        android:id="@+id/btnGaoJi"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="50"
                        android:background="@drawable/s_btn1"
                        android:gravity="center_vertical|center_horizontal"
                        android:onClick="onGaoJi"
                        android:text="@string/btnGaoJiText"
                        android:textColor="@color/s_btncolor2"
                        android:textSize="@dimen/text_size20"
                        myViewXmlns:attr2="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="140" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="66" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="55"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="192" />

                <cn.jucheng.www.hulisiwei.customcontrols.FitHeightButton
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="90"
                    android:background="@drawable/s_btn2"
                    android:gravity="center_vertical|center_horizontal"
                    android:lineSpacingMultiplier="1.4"
                    android:onClick="onSave"
                    android:paddingBottom="5dp"
                    android:text="@string/btnSaveText"
                    android:textColor="@color/s_btncolor"
                    android:textSize="@dimen/text_size26"
                    myViewXmlns:attr2="2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="26" />

                <cn.jucheng.www.hulisiwei.customcontrols.FitHeightButton
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="90"
                    android:background="@drawable/s_btn2"
                    android:gravity="center_vertical|center_horizontal"
                    android:lineSpacingMultiplier="1.4"
                    android:onClick="onClose"
                    android:paddingBottom="5dp"
                    android:text="关闭"
                    android:textColor="@color/s_btncolor"
                    android:textSize="@dimen/text_size26"
                    myViewXmlns:attr2="2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="192" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="42" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="220"
            android:background="#00000000" >
        </TextView>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="86" >
    </TextView>

</LinearLayout>