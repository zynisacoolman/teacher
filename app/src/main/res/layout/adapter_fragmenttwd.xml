<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1360dp"
            android:background="@drawable/twd_"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="189dp"/>
            <!--表头-->
            <include layout="@layout/fragment_formhead_layout"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"/>
                <cn.jucheng.www.hulisiwei.customcontrols.FitHeightTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:id="@+id/h_ryrq"
                    android:text="入院日期"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"/>
                <cn.jucheng.www.hulisiwei.customcontrols.FitHeightTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:id="@+id/h_zyblh"
                    android:text="住院病历号"/>
            </LinearLayout>
            <!--内容-->
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <GridView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:numColumns="7"
                android:id="@+id/gv_twd_ryrq"
                />
            <GridView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:numColumns="7"
                android:id="@+id/gv_twd_zydays"
            />
            <GridView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:numColumns="7"
                android:id="@+id/gv_twd_sshdays"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="930dp"
                android:id="@+id/ll_wendu"
                android:orientation="horizontal">

                <!--<XYtoLine-->
                    <!--android:background="#00000000"-->
                    <!--android:id="@+id/twLine"-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="fill_parent"-->
                    <!--/>-->

            </LinearLayout>
            <GridView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:numColumns="42"
                android:id="@+id/gv_twd_hxcs1">

            </GridView>
            <GridView
                android:layout_weight="1"
                android:layout_height="10dp"
                android:numColumns="42"
                android:id="@+id/gv_twd_hxcs2"
                android:layout_width="wrap_content">

            </GridView>
            <GridView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:numColumns="14"
                android:id="@+id/gv_twd_xueya"
                >

            </GridView>
            <GridView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:numColumns="7"
                android:id="@+id/gv_twd_ruliang">

            </GridView>
            <GridView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:numColumns="7"
                android:id="@+id/gv_twd_chuliang">

            </GridView>
            <GridView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:numColumns="7"
                android:id="@+id/gv_twd_dabian">

            </GridView>
            <GridView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:numColumns="7"
                android:id="@+id/gv_twd_tizhong">

            </GridView>
            <GridView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:numColumns="7"
                android:id="@+id/gv_twd_shengao">

            </GridView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp" />
            <!--页数-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="446" />

                <cn.jucheng.www.hulisiwei.customcontrols.FitHeightTextView
                    android:id="@+id/inject_page_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:text="第1页"
                    android:textColor="@color/black_333"
                    android:textSize="@dimen/text_size14" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="444" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="76dp" />
        </LinearLayout>
        </ScrollView>
</LinearLayout>