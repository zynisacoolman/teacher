<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1360dp"
            android:background="@drawable/cure_bac"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="156dp" />
            <!--表头-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="123"

                    />
                <!--治疗单姓名-->
                <cn.jucheng.www.hulisiwei.customcontrols.FitHeightTextView
                    android:id="@+id/cure_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:textColor="@color/heise"
                    android:textSize="@dimen/text_size16" />

                <TextView
                    android:layout_width="42dp"
                    android:layout_height="match_parent" />
                <!--治疗单性别-->
                <cn.jucheng.www.hulisiwei.customcontrols.FitHeightTextView
                    android:id="@+id/cure_sex"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:textColor="@color/heise"
                    android:textSize="@dimen/text_size16" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="51" />
                <!--治疗单年龄-->
                <cn.jucheng.www.hulisiwei.customcontrols.FitHeightTextView
                    android:id="@+id/cure_age"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:textColor="@color/heise"
                    android:textSize="@dimen/text_size16" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="51" />
                <!--治疗单科别-->
                <cn.jucheng.www.hulisiwei.customcontrols.FitHeightTextView
                    android:id="@+id/cure_division"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="100"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:textColor="@color/heise"
                    android:textSize="@dimen/text_size16" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="57" />
                <!--治疗单床号-->
                <cn.jucheng.www.hulisiwei.customcontrols.FitHeightTextView
                    android:id="@+id/cure_bednumber"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:textColor="@color/heise"
                    android:textSize="@dimen/text_size16" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="71" />
                <!--治疗单病案号-->
                <cn.jucheng.www.hulisiwei.customcontrols.FitHeightTextView
                    android:id="@+id/cure_medicalrecord_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:textColor="@color/heise"
                    android:textSize="@dimen/text_size16" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="85" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"></LinearLayout>
            <!--内容-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="903dp"
                android:orientation="horizontal">

                <cn.jucheng.www.hulisiwei.base.MyList
                    android:id="@+id/cure_list"
                    android:layout_width="match_parent"
                    android:layout_height="903dp"
                    android:divider="@color/touming"
                    android:listSelector="@color/touming" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="39dp" />
            <!--结尾-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="84" />
                <!--年份-->
                <cn.jucheng.www.hulisiwei.customcontrols.FitHeightTextView
                    android:id="@+id/cure_years"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:textColor="@color/heise"
                    android:textSize="@dimen/text_size16" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="29" />
                <!--月份-->
                <cn.jucheng.www.hulisiwei.customcontrols.FitHeightTextView
                    android:id="@+id/cure_mouth"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:textColor="@color/heise"
                    android:textSize="@dimen/text_size16" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30" />
                <!--日-->
                <cn.jucheng.www.hulisiwei.customcontrols.FitHeightTextView
                    android:id="@+id/cure_day"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:textColor="@color/heise"
                    android:textSize="@dimen/text_size16" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="274" />
                <!--核对者-->
                <cn.jucheng.www.hulisiwei.customcontrols.FitHeightTextView
                    android:id="@+id/cure_checkuser"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:textColor="@color/heise"
                    android:textSize="@dimen/text_size16" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="78" />
                <!--执行者-->
                <cn.jucheng.www.hulisiwei.customcontrols.FitHeightTextView
                    android:id="@+id/cure_carryout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:textColor="@color/heise"
                    android:textSize="@dimen/text_size16" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="85" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="146dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>