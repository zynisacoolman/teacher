<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="vertical"
    android:id="@+id/ll_item_bllb"
    android:clickable="true"
    android:background="@color/bg_bgcolor2"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="28"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            />
        <cn.jucheng.www.hulisiwei.customcontrols.FitHeightTextView
            android:id="@+id/fhtv_bllb_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="饮水过多"
            android:textColor="@color/banner_txt_color"
            android:textSize="@dimen/text_size16"
            android:layout_weight="184"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="36"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"/>

</LinearLayout>
