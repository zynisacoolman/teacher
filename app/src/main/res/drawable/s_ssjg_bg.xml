<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 获得焦点时 -->
    <item android:drawable="@drawable/ssjg_bg_p" android:state_focused="true" android:state_pressed="false"/>
    <!-- 获得焦点并按下 -->
    <item android:drawable="@drawable/ssjg_bg_p" android:state_focused="true" android:state_pressed="true"/>
    <!-- 失去焦点时 -->
    <item android:drawable="@drawable/ssjg_bg_p" android:state_focused="false" android:state_pressed="true"/>
    <item android:drawable="@drawable/ssjg_bg_p" android:state_enabled="false"/>
    <item android:drawable="@drawable/ssjg_bg_p" android:state_selected="true"/>
   <!-- 默认时 -->
    <item android:drawable="@drawable/ssjg_bg_n"/>

</selector>